<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewText">
        <item name="android:textSize">@dimen/cardview_text_size</item>
        <item name="android:paddingTop">@dimen/cardview_padding</item>
        <item name="android:paddingBottom">@dimen/cardview_padding</item>
    </style>

    <style name="CardViewCustom" parent="CardView">
        <item name="android:layout_marginTop">@dimen/cardview_margin</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin</item>
    </style>
</resources>
